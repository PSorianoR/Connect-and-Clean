<div class="col-4">
  <div class="m-3 card w-75 mb-3 rounded-5">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= cl_image_tag @job.user.photo.key, id: "profile_pic", alt: "Profile Picture", class: "img-fluid rounded-circle", width: '200', hight: '200' %>
      </div>
      <div class="border-bottom border-black">
        <h5 class="card-title text-center"><i class="fa-solid fa-address-book" style="color: #366cc9;"></i> Contact Information</h5>
      </div>
      <div class='d-flex d-flex justify-content-between mt-2'>
        <p> <i class="fa-regular fa-envelope" style="color: #366cc9;"> </i> <%= @job.user.email %> </p>
      </div>
      <div class="d-flex justify-content-between mb-2">
        <li class="list-group-item"> <i class="fa-solid fa-phone" style="color: #2564d0;"></i> <%= @job.user.phone_number %> </li>
      </div>
      <%= link_to "Profile", user_path(@job.user), class: 'btn btn-primary btn-rounded mt-4' %>
    </div>
  </div>
</div>
