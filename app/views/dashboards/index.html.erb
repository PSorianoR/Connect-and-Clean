<div class="container" data-controller="date-filter">
  <div class="d-flex justify-content-around align-items-center mt-4">
    <button class="btn btn-primary" data-action="date-filter#previous">Previous</button>
    <h1 data-date-filter-target="month"><%= Date.today.strftime("%B") %></h1>
    <button class="btn btn-primary" data-action="date-filter#next">Next</button>
  </div>

  <div class="d-flex flex-column align-items-center">
    <small>Filter more specific dates</small>
    <div>
      <label for="from_date">From:</label>
      <input type="date" id="from_date" name="from_date" data-date-filter-target="from">
      <label for="until_date">Until:</label>
      <input type="date" id="until_date" name="until_date" data-date-filter-target="until">
      <button id="filter_button" data-action="click->date-filter#filterJobs">Filter</button>
    </div>
  </div>


  <%# TEST %>
  <div class="m-4">
    <h2>Executed Jobs</h2>
    <h3 data-date-filter-target="numberJobs">Total jobs for the period: <%= @jobs.count %></h3>
    <h3 data-date-filter-target="totalPrice"> Total price for the period: <%= @total_price %></h3>
    <div data-date-filter-target="jobs">
      <% @jobs.each do |job| %>
        <p>Cleaning job on <%= job.date_of_job %>: <%= job.price %></p>
      <% end %>
    </div>
  </div>
</div>
